config system global
    set admin-scp enable
    set admin-sport 8443
    set admintimeout 480
    set alias "dc1-fgt1"
    set gui-app-detection-sdwan enable
    set gui-auto-upgrade-setup-warning disable
    set gui-ipv6 enable
    set gui-local-out enable
    set hostname "dc1-fgt1"
    set timezone 12
end
config system settings
    set gui-dns-database enable
    set gui-load-balance enable
    set gui-local-in-policy enable
    set gui-sslvpn enable
    set gui-dlp-profile enable
    set gui-advanced-policy enable
    set gui-multiple-interface-policy enable
    set gui-policy-disclaimer enable
    set gui-dynamic-device-os-id enable
end
config system interface
    edit "port1"
        set vdom "root"
        unset mode
        unset ip
        set allowaccess ping
        set type physical
        set alias "public1"
        set lldp-reception enable
        set role wan
    next
    edit "internet1"
        set vdom "root"
        set ip 172.21.201.31 255.255.255.0
        set allowaccess ping
        set alias "internet1"
        set device-identification enable
        set role wan
        set interface "port1"
        set vlanid 1109
    next
    edit "port2"
        set vdom "root"
        set ip 169.0.1.1 255.255.255.252
        set allowaccess ping
        set type physical
        set alias "inside"
        set device-identification enable
        set lldp-transmission enable
        set role lan
        config ipv6
            set ip6-allowaccess ping
        end
        set mtu-override enable
        set mtu 9000
    next
    edit "port3"
        set vdom "root"
        unset mode
        unset ip
        set allowaccess ping
        set type physical
        set alias "public2"
        set lldp-reception enable
        set role wan
    next
    edit "internet2"
        set vdom "root"
        set ip 172.21.202.31 255.255.255.0
        set allowaccess ping
        set alias "internet2"
        set device-identification enable
        set role wan
        set interface "port3"
        set vlanid 1110
    next
    edit "port8"
        set vdom "root"
        set allowaccess ping https ssh http fgfm
        set type physical
        set lldp-transmission enable
    next
    edit "mgmt"
        set vdom "root"
        set ip 172.21.204.31 255.255.255.0
        set allowaccess ping https ssh snmp http fgfm
        set alias "mgmt"
        set device-identification enable
        set role lan
        set interface "port8"
        set vlanid 1102
    next
    edit "lo0"
        set vdom "root"
        set ip 169.255.255.31 255.255.255.255
        set allowaccess ping ssh
        set type loopback
        set alias "lo0"
        set role lan
    next
end
config system zone
    edit "INTERNAL"
        set intrazone allow
        set interface "port2"
    next
    edit "INTERNET"
        set interface "internet1" "internet2"
    next
end
config router static
    edit 1
        set gateway 172.21.201.254
        set device "internet1"
    next
    edit 2
        set gateway 172.21.202.1
        set device "internet2"
    next
    edit 10
        set dst 10.0.0.0 255.0.0.0
        set gateway 172.21.204.254
        set device "mgmt"
    next
    edit 11
        set dst 172.16.0.0 255.240.0.0
        set gateway 172.21.204.254
        set device "mgmt"
    next
    edit 12
        set dst 192.168.0.0 255.255.0.0
        set gateway 172.21.204.254
        set device "mgmt"
    next
end
config vpn ssl settings
    set servercert "Fortinet_Factory"
    set tunnel-ip-pools "SSLVPN_TUNNEL_ADDR1"
    set tunnel-ipv6-pools "SSLVPN_TUNNEL_IPv6_ADDR1"
    set source-interface "INTERNET"
    set source-address "all"
    set source-address6 "all"
    set default-portal "full-access"
    set port 10443
end
config vpn ipsec phase1-interface
    edit "hub1-vpn1"
        set type dynamic
        set interface "internet1"
        set ike-version 2
        set peertype any
        set net-device disable
        set mode-cfg enable
        set proposal aes256-sha256
        set add-route disable
        set dpd on-idle
        set comments "VPN: hub1-vpn1"
        set auto-discovery-sender enable
        set network-overlay enable
        set network-id 1
        set ipv4-start-ip 169.100.254.11
        set ipv4-end-ip 169.100.254.250
        set ipv4-netmask 255.255.255.0
        set psksecret ENC SxwYTKQaAzKkF4vZyjdOejpHRUMf8L+SFVhYRpdvs/MlfRZovbU+s7c56PVyOIL6zTLFN0fwTpA6AJSuNYOCoE14xw3lpyzraM3UkXxhwenZMAYgYwKspzqzsq4OFg8ha972unFwJ9I+uZqgZO4I876/tgytG0laDZifZhF8C4/fNtlAatlQ/Z1jRKg5q6egZOuk5A==
        set dpd-retryinterval 60
    next
    edit "hub1-vpn2"
        set type dynamic
        set interface "internet2"
        set ike-version 2
        set peertype any
        set net-device disable
        set mode-cfg enable
        set proposal aes256-sha256
        set add-route disable
        set dpd on-idle
        set comments "VPN: hub1-vpn2"
        set auto-discovery-sender enable
        set network-overlay enable
        set network-id 3
        set ipv4-start-ip 169.101.254.11
        set ipv4-end-ip 169.101.254.250
        set ipv4-netmask 255.255.255.0
        set psksecret ENC JgzekQqVW9a6b8yMKay6N7GYxQGR/rcjZqQrVzllCoQevZbwdbXfBF8lC6nPPEc5hmE6Jbw6WqQ1t7Rt9airFJ3p5pmHVMXETnOHrqcUnLA/QeUxE2vDpw4MIVNkin9y5TTWWm2DneQeHUA4CYpUyCcQPIx5jijWJ8d6VnftHn1+4S50B2dERypi9cKzPyod7ic8Lg==
        set dpd-retryinterval 60
    next
end
config vpn ipsec phase2-interface
    edit "hub1-vpn1"
        set phase1name "hub1-vpn1"
        set proposal aes256-sha256
        set comments "VPN: hub1-vpn1"
    next
    edit "hub1-vpn2"
        set phase1name "hub1-vpn2"
        set proposal aes256-sha256
        set comments "VPN: hub1-vpn2"
    next
end
config system interface
    edit "hub1-vpn1"
        set vdom "root"
        set ip 169.100.254.1 255.255.255.255
        set allowaccess ping
        set type tunnel
        set remote-ip 169.100.254.254 255.255.255.0
        set interface "internet1"
        set mtu-override enable
        set mtu 1360
    next
    edit "hub1-vpn2"
        set vdom "root"
        set ip 169.101.254.1 255.255.255.255
        set allowaccess ping
        set type tunnel
        set remote-ip 169.101.254.254 255.255.255.0
        set interface "internet2"
        set mtu-override enable
        set mtu 1360
    next
end
config firewall address
    edit "port2 address"
        set type interface-subnet
        set subnet 169.0.2.0 255.255.255.252
        set interface "port2"
    next
    edit "mgmt address"
        set type interface-subnet
        set subnet 172.21.204.0 255.255.255.0
        set interface "mgmt"
    next
    edit "lo0 address"
        set type interface-subnet
        set subnet 169.255.255.31 255.255.255.255
        set interface "lo0"
    next
    edit "ADVPN-SUBNET"
        set subnet 169.100.254.0 255.255.254.0
    next
    edit "BRANCH1-SUBNETS"
        set subnet 169.26.0.0 255.255.0.0
    next
    edit "BRANCH2-SUBNETS"
        set subnet 169.27.0.0 255.255.0.0
    next
    edit "CORE-INFRA-169.0.0.0"
        set subnet 169.0.0.0 255.255.0.0
    next
    edit "DC-SERVERS-169.1.0.0"
        set subnet 169.1.0.0 255.255.0.0
    next
    edit "DC1-CORE-INFRA-169.0.0.0"
        set subnet 169.0.0.0 255.255.252.0
    next
    edit "DC2-CORE-INFRA-169.0.4.0"
        set subnet 169.0.4.0 255.255.252.0
    next
    edit "LOOPBACKS"
        set subnet 169.255.254.0 255.255.254.0
    next
end
config firewall addrgrp
    edit "BRANCH-SUBNETS"
        set member "BRANCH2-SUBNETS" "BRANCH1-SUBNETS"
    next
    edit "HUB-SUBNETS"
        set member "DC2-CORE-INFRA-169.0.4.0" "DC1-CORE-INFRA-169.0.0.0" "DC-SERVERS-169.1.0.0" "CORE-INFRA-169.0.0.0"
    next
end
config firewall policy
    edit 3
        set name "ADVPN-IN"
        set srcintf "hub1-vpn1" "hub1-vpn2"
        set dstintf "INTERNAL"
        set action accept
        set srcaddr "ADVPN-SUBNET" "BRANCH-SUBNETS" "LOOPBACKS"
        set dstaddr "HUB-SUBNETS"
        set schedule "always"
        set service "ALL"
        set logtraffic all
    next
    edit 4
        set name "ADVPN-IN-LOOPBACKS"
        set srcintf "hub1-vpn1" "hub1-vpn2"
        set dstintf "lo0"
        set action accept
        set srcaddr "ADVPN-SUBNET" "BRANCH-SUBNETS" "LOOPBACKS"
        set dstaddr "LOOPBACKS"
        set schedule "always"
        set service "ALL"
        set logtraffic all
    next
    edit 5
        set name "BRANCH-TO-BRANCH"
        set srcintf "hub1-vpn1" "hub1-vpn2"
        set dstintf "hub1-vpn1" "hub1-vpn2"
        set action accept
        set srcaddr "ADVPN-SUBNET" "BRANCH-SUBNETS" "LOOPBACKS"
        set dstaddr "ADVPN-SUBNET" "BRANCH-SUBNETS" "HUB-SUBNETS"
        set schedule "always"
        set service "ALL"
        set logtraffic all
    next
    edit 6
        set name "HUB-TO-BRANCH"
        set srcintf "INTERNAL"
        set dstintf "hub1-vpn1" "hub1-vpn2"
        set action accept
        set srcaddr "HUB-SUBNETS"
        set dstaddr "ADVPN-SUBNET" "BRANCH-SUBNETS" "LOOPBACKS"
        set schedule "always"
        set service "ALL"
        set logtraffic all
    next
    edit 2
        set name "NAT-OUT"
        set srcintf "INTERNAL"
        set dstintf "INTERNET"
        set action accept
        set srcaddr "HUB-SUBNETS"
        set dstaddr "all"
        set schedule "always"
        set service "ALL"
        set logtraffic all
        set nat enable
    next
end
config router bgp
    set as 64001
    set router-id 169.255.255.1
    set ibgp-multipath enable
    set additional-path enable
    set graceful-restart enable
    set additional-path-select 255
    config neighbor
        edit "169.0.1.2"
            set activate6 disable
            set capability-graceful-restart enable
            set capability-graceful-restart6 enable
            set capability-default-originate enable
            set capability-default-originate6 enable
            set soft-reconfiguration enable
            set soft-reconfiguration6 enable
            set remote-as 65011
        next
    end
    config neighbor-group
        edit "VPN1"
            set capability-graceful-restart enable
            set capability-graceful-restart6 enable
            set link-down-failover enable
            set next-hop-self enable
            set next-hop-self6 enable
            set soft-reconfiguration enable
            set soft-reconfiguration6 enable
            set remote-as 64001
            set additional-path send
            set route-reflector-client enable
            set route-reflector-client6 enable
        next
        edit "VPN2"
            set capability-graceful-restart enable
            set capability-graceful-restart6 enable
            set link-down-failover enable
            set next-hop-self enable
            set next-hop-self6 enable
            set soft-reconfiguration enable
            set soft-reconfiguration6 enable
            set remote-as 64001
            set additional-path send
            set route-reflector-client enable
            set route-reflector-client6 enable
        next
    end
    config neighbor-range
        edit 1
            set prefix 169.100.254.0 255.255.255.0
            set neighbor-group "VPN1"
        next
        edit 2
            set prefix 169.101.254.0 255.255.255.0
            set neighbor-group "VPN2"
        next
    end
    config redistribute "connected"
        set status enable
    end
end
